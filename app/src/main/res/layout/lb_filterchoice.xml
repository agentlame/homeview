<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/resumechoice_row_height"
    android:descendantFocusability="blocksDescendants"
    android:paddingStart="@dimen/codec_choice_text_padding"
    android:paddingEnd="@dimen/codec_choice_text_padding" >


    <CheckBox
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:shadowColor="@color/black_opaque"
        android:shadowRadius="3.0"
        tools:checked="true"
        tools:text="Sort name"/>

    <ImageView
        android:id="@+id/directionImage"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/codec_choice_image_padding"
        android:paddingBottom="@dimen/codec_choice_image_padding"
        android:minWidth="@dimen/codec_choice_image_minwidth"
        android:maxWidth="@dimen/codec_choice_image_maxwidth"
        android:contentDescription="@string/codeccard_image_desc"
        android:scaleType="centerInside"
        android:src="@drawable/ic_vertical_align_bottom_white_48dp"
        tools:visibility="visible"/>

</RelativeLayout>