<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/infoLayer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingTop="@dimen/playback_ui_time_top_padding"
        android:paddingBottom="@dimen/playback_ui_time_bottom_padding"
        android:paddingStart="@dimen/playback_ui_time_sides_padding"
        android:paddingEnd="@dimen/playback_ui_time_sides_padding"
        android:elevation="10dp"
        android:background="@drawable/playback_background_high_to_low">

        <TextClock
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="6dp"
            android:paddingStart="0dp"
            android:paddingTop="15dp"
            android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionTitle" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/controls_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layoutDirection="ltr"
        android:background="@drawable/playback_background_low_to_high"
        android:paddingTop="@dimen/playback_ui_time_top_padding"
        android:paddingBottom="@dimen/playback_ui_time_bottom_padding"
        android:paddingStart="@dimen/playback_ui_time_sides_padding"
        android:paddingEnd="@dimen/playback_ui_time_sides_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/posterImage"
            android:transitionName="hero"
            style="?attr/imageCardViewImageStyle"
            tools:src="@drawable/default_video_cover"
            android:layout_width="@dimen/POSTER_WIDTH"
            android:layout_height="@dimen/POSTER_HEIGHT"
            android:contentDescription="@string/codeccard_image_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="@dimen/playback_text_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionTitle"
                    android:textSize="26sp"
                    tools:ignore="SmallSp"
                    tools:text="Video Clip Title"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/title">

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionSubtitle"
                        tools:text="Subtitle"/>

                    <ImageView
                        android:id="@+id/ratingImage"
                        android:layout_width="@dimen/playback_ui_icons_width_large"
                        android:layout_height="@dimen/playback_ui_icons_height"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/subtitle"
                        tools:src="@drawable/ic_speaker_notes_white_48dp"
                        tools:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/icons"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/playback_ui_icons_height"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/resolutionImage"
                            android:layout_width="@dimen/playback_ui_icons_width_small"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/playback_ui_codec_padding"
                            android:layout_marginStart="@dimen/playback_ui_codec_padding"
                            android:scaleType="fitCenter"
                            android:visibility="invisible"
                            tools:src="@drawable/ic_speaker_notes_white_48dp"
                            tools:visibility="visible"/>

                        <ImageView
                            android:id="@+id/framerateImage"
                            android:layout_width="@dimen/playback_ui_icons_width_small"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/playback_ui_codec_padding"
                            android:scaleType="fitCenter"
                            android:visibility="invisible"
                            tools:src="@drawable/ic_speaker_notes_white_48dp"
                            tools:visibility="visible"/>

                        <ImageView
                            android:id="@+id/aspectRatioImage"
                            android:layout_width="@dimen/playback_ui_icons_width_small"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/playback_ui_codec_padding"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            tools:src="@drawable/ic_speaker_notes_white_48dp"
                            tools:visibility="visible"/>

                        <ImageView
                            android:id="@+id/videoImage"
                            android:layout_width="@dimen/playback_ui_icons_width_large"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/playback_ui_codec_padding"
                            android:scaleType="fitCenter"
                            android:visibility="invisible"
                            tools:src="@drawable/ic_speaker_notes_white_48dp"
                            tools:visibility="visible"/>

                        <ImageView
                            android:id="@+id/audioImage"
                            android:layout_width="@dimen/playback_ui_icons_width_large"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/playback_ui_codec_padding"
                            android:layout_marginStart="@dimen/playback_ui_codec_padding"
                            android:scaleType="fitCenter"
                            android:visibility="invisible"
                            tools:src="@drawable/ic_speaker_notes_white_48dp"
                            tools:visibility="visible"/>

                        <ImageView
                            android:id="@+id/channelsImage"
                            android:layout_width="@dimen/playback_ui_icons_width_small"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:visibility="invisible"
                            tools:src="@drawable/ic_speaker_notes_white_48dp"
                            tools:visibility="visible"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="4dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/time_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/playback_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/exo_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                            tools:text="00:00:00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "
                            android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionBody"/>

                        <TextView
                            android:id="@+id/exo_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                            tools:text=" 1:24:00"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/remaining_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ends_at"
                            android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "/>

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Leanback.DetailsDescriptionBody"
                            tools:text="12:00"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">

                    <ImageButton
                        android:id="@+id/exo_prev_chapter"
                        style="@style/ExoMediaButton.Previous"/>

                    <ImageButton
                        android:id="@id/exo_rew"
                        style="@style/ExoMediaButton.Rewind"/>

                    <ImageButton
                        android:id="@id/exo_play"
                        style="@style/ExoMediaButton.Play"/>

                    <ImageButton
                        android:id="@id/exo_pause"
                        style="@style/ExoMediaButton.Pause"/>

                    <ImageButton
                        android:id="@id/exo_ffwd"
                        style="@style/ExoMediaButton.FastForward"/>

                    <ImageButton
                        android:id="@+id/exo_next_chapter"
                        style="@style/ExoMediaButton.Next"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/time_section"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/playback_text_padding"
                    android:paddingTop="4dp">

                    <ImageButton
                        android:id="@+id/exo_pip"
                        style="@style/ExoMediaButton.PictureInPicture"/>

                    <ImageButton
                        android:id="@+id/exo_chapters"
                        style="@style/ExoMediaButton.Chapters"
                        android:alpha="0.3"
                        android:enabled="false"/>

                    <ImageButton
                        android:id="@+id/exo_audio_tracks"
                        style="@style/ExoMediaButton.Audio"
                        android:alpha="0.3"
                        android:enabled="false"/>

                    <ImageButton
                        android:id="@+id/exo_subtitle_tracks"
                        style="@style/ExoMediaButton.Subtitle"
                        android:alpha="0.3"
                        android:enabled="false"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>