<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.App.Current.Leanback">
        <item name="card_normal">?android:colorPrimaryDark</item>
        <item name="card_selected">?android:colorPrimary</item>
        <item name="brand_color">?android:colorPrimary</item>
        <item name="brand_accent">?android:colorAccent</item>
    </style>

    <style name="AppTheme.Browse" parent="@style/Theme.App.Current.Leanback.Browse">
        <item name="card_normal">?android:colorPrimaryDark</item>
        <item name="card_selected">?android:colorPrimary</item>
        <item name="brand_color">?android:colorPrimary</item>
        <item name="brand_accent">?android:colorAccent</item>
    </style>

    <style name="dialog_animation" >
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="ExoMediaButton.PictureInPicture">
        <item name="android:src">@drawable/ic_picture_in_picture_white_24dp</item>
        <item name="android:contentDescription">@string/exo_controls_pip_description</item>
    </style>


    <style name="ExoMediaButton.Chapters">
        <item name="android:src">@drawable/ic_playlist_play_white_24dp</item>
        <item name="android:contentDescription">@string/exo_controls_chapters_description</item>
    </style>

    <style name="ExoMediaButton.Audio">
        <item name="android:src">@drawable/ic_audiotrack_white_24dp</item>
        <item name="android:contentDescription">@string/exo_controls_audio_description</item>
    </style>

    <style name="ExoMediaButton.Subtitle">
        <item name="android:src">@drawable/ic_subtitles_white_24dp</item>
        <item name="android:contentDescription">@string/exo_controls_subtitles_description</item>
    </style>
</resources>
